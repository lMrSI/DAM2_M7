    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
